#!/bin/bash

# Define the alias
alias_command='alias tf="terraform"'

# Check if the .bash_profile exists
bash_profile="$HOME/.bash_profile"

if [ -e "$bash_profile" ]; then
  # Check if the alias is already in .bash_profile
  if ! grep -q "alias tf=\"terraform\"" "$bash_profile"; then
    # Append the alias definition to .bash_profile
    echo "$alias_command" >> "$bash_profile"
    echo "Alias 'tf' for 'terraform' has been added to your .bash_profile."
  else
    echo "Alias 'tf' for 'terraform' already exists in your .bash_profile."
  fi
else
  # If .bash_profile doesn't exist, create it and add the alias
  echo "$alias_command" > "$bash_profile"
  echo "Alias 'tf' for 'terraform' has been added to a new .bash_profile."
fi